<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoLiveUp"
        xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="AutoLiveUp.MainWindow"
        mc:Ignorable="d"
        Title="Auto LiveUp" Height="200" Width="300" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="73*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Choose key combination for refresh session:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" Height="26" Width="243"/>
        <ComboBox x:Name="ComboBox_CombinationKey" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Width="267" Grid.ColumnSpan="2" SelectionChanged="ComboBox_CombinationKey_SelectionChanged" IsReadOnly="True" Height="22" SelectedIndex="0">
            <System:String>Space (Default)</System:String>
            <System:String>Ctrl</System:String>
            <System:String>Shift</System:String>
            <System:String>Numlock</System:String>
            <System:String>Capslock</System:String>
            <System:String>Alt+Tab</System:String>
        </ComboBox>
        <Label Content="Set timeout for refresh:" HorizontalAlignment="Left" Margin="10,68,0,0" VerticalAlignment="Top" Height="26" Width="132"/>
        <ComboBox x:Name="ComboBox_RefreshTimeout" HorizontalAlignment="Left" Margin="14,70,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1" SelectionChanged="ComboBox_RefreshTimeout_SelectionChanged" Height="22" SelectedIndex="2">
            <System:String>30 sec</System:String>
            <System:String>1 min</System:String>
            <System:String>3 min (Default)</System:String>
            <System:String>5 min</System:String>
            <System:String>10 min</System:String>
            <System:String>15 min</System:String>
            <System:String>20 min</System:String>
            <System:String>30 min</System:String>
            <System:String>1 hour</System:String>
        </ComboBox>
        <Button x:Name="Button_Start" Content="Start" HorizontalAlignment="Left" Margin="10,134,0,0" VerticalAlignment="Top" Width="75" Click="Button_Start_Click" Height="20"/>
        <Button x:Name="Button_Stop" Content="Stop" HorizontalAlignment="Left" Margin="59,134,0,0" VerticalAlignment="Top" Width="75" Grid.Column="1" Click="Button_Stop_Click" Height="20"/>

    </Grid>
</Window>
